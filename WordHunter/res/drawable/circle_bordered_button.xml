<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/gray"/>
            <stroke 
                android:width="3dp"
                android:color="@color/black"/>
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="30dp"
                android:right="20dp"
                android:bottom="30dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval" >
            <solid android:color="@color/white"/>
            <stroke 
                android:width="3dp"
                android:color="@color/black"/>
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="30dp"
                android:right="20dp"
                android:bottom="30dp" />
        </shape>        
    </item>

</selector>
